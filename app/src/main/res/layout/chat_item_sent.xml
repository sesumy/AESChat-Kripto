<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="right"
              tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/v1"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_bubble_green"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_5dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_chat_item"
        android:paddingTop="@dimen/pad_5dp"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
        android:layout_marginRight="150dp">

            <TextView
                android:id="@+id/lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13sp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sd"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp"
                android:maxLines="4"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textvdv"
            android:textColor="@color/main_color_gray"
            android:textSize="@dimen/txt_14sp"
            android:layout_alignRight="@+id/v1"
            android:layout_below="@+id/v1"
            android:layout_marginTop="@dimen/pad_5dp"
            android:layout_marginRight="320dp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded"/>
</LinearLayout>
